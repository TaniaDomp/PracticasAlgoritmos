public class Calculadora {
	
	public static double multiplicacion (double n, double m) {
		double resul = 0;
		
		for (int i =1; i <= n; i++) {
			resul += m;
		}
		return resul;
	}
	
	public static double potencia (double n1, double m1) {
		double resul = 1;
		
		for (int i =1; i <= n1; i++) {
			resul *= m1;
		}
		return resul;
	}
	
	public static String ordenaCreciente(int numero1, int numero2) {
		StringBuilder ord = new StringBuilder();
		if (numero1 < numero2) {
			ord.append(numero1 + "-" + numero2);
		}
		else {
			ord.append(numero2 + "-" + numero1);
		}
		return ord.toString();
	}
	
	public static boolean esImpar(int numero) {
		boolean r;
		int resd;
		resd = numero % 2;
		
		if (resd != 0) {
			r = true;
		}
		else {
			r = false;
		}
		return r;
	}
}
